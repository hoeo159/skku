CC = gcc
CFLAGS_DEBUG = -Wall -Og	# defuault
CFLAGS_OPT = -Wall -O3		# -O3 is the highest optimization level
TARGET_DEBUG = 2024-2-SP-A3-Debug-2020312914
TARGET_OPT = 2024-2-SP-A3-Opt-2020312914
TARGET_INIT = 2024-2-SP-A3-Initial-2020312914
SRCS_DEBUG = 2024-2-SP-A3-Debug-2020312914.c
SRCS_OPT = 2024-2-SP-A3-Initial-2020312914.c
SRCS_INIT = 2024-2-SP-A3-Initial-2020312914.c

all: $(TARGET_DEBUG) $(TARGET_OPT) $(TARGET_INIT)

$(TARGET_DEBUG): $(SRCS)
	$(CC) $(CFLAGS_DEBUG) -o $(TARGET_DEBUG) $(SRCS_DEBUG)

$(TARGET_OPT): $(SRCS)
	$(CC) $(CFLAGS_OPT) -o $(TARGET_OPT) $(SRCS_OPT)

$(TARGET_INIT): $(SRCS)
	$(CC) $(CFLAGS_DEBUG) -o $(TARGET_INIT) $(SRCS_INIT)

clean:
	rm -f $(TARGET_DEBUG) $(TARGET_OPT) $(TARGET_INIT)
